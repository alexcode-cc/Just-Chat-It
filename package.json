{
  "name": "just-chat-it",
  "version": "1.0.0",
  "description": "一個現代化的多AI聊天桌面應用程式",
  "main": "dist/main/index.js",
  "author": "alexcode.cc@outlook.com",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:electron": "npm run build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.vue --fix",
    "lint:check": "eslint src --ext .ts,.vue",
    "format": "prettier --write \"src/**/*.{ts,vue,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,vue,scss}\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "vue": "^3.3.0",
    "vuetify": "^3.4.0",
    "pinia": "^2.1.0",
    "vue-router": "^4.2.0",
    "electron": "^27.0.0",
    "better-sqlite3": "^9.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.4.0",
    "@vue/test-utils": "^2.4.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.50.0",
    "eslint-plugin-vue": "^9.17.0",
    "prettier": "^3.0.0",
    "sass": "^1.69.0",
    "typescript": "^5.2.0",
    "vite": "^4.5.0",
    "vite-plugin-electron": "^0.14.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vitest": "^0.34.0",
    "vue-tsc": "^1.8.0"
  }
}
